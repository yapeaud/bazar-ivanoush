require \'json\';

toJSON() {
    declare \-A doc;
    doc[key]="value";
    doc[greeting]="hello world";
    # doc is the *name* of the variable to stringify
    local document=$( json\.stringify <<< "doc" );
    echo "$document";
}
toJSON;
